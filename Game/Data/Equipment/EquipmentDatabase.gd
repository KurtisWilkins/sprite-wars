## Return a single equipment item by equipment_id, or an empty dictionary if not found.
static func get_equipment(equipment_id: int) -> Dictionary:
	for item: Dictionary in get_all_equipment():
		if item.get("equipment_id", -1) == equipment_id:
			return item
	return {}


## Return all equipment for a given slot type.
static func get_equipment_by_slot(slot_type: String) -> Array[Dictionary]:
	var result: Array[Dictionary] = []
	for item: Dictionary in get_all_equipment():
		if item.get("slot_type", "") == slot_type:
			result.append(item)
	return result


## Return all equipment of a given rarity.
static func get_equipment_by_rarity(rarity: String) -> Array[Dictionary]:
	var result: Array[Dictionary] = []
	for item: Dictionary in get_all_equipment():
		if item.get("rarity", "") == rarity:
			result.append(item)
	return result


## Return all equipment that has synergy with a given element.
static func get_equipment_by_element_synergy(element: String) -> Array[Dictionary]:
	var result: Array[Dictionary] = []
	for item: Dictionary in get_all_equipment():
		if item.get("element_synergy", "") == element:
			result.append(item)
	return result


## Return all equipment that has synergy with a given class.
static func get_equipment_by_class_synergy(class_type: String) -> Array[Dictionary]:
	var result: Array[Dictionary] = []
	for item: Dictionary in get_all_equipment():
		if item.get("class_synergy", "") == class_type:
			result.append(item)
	return result


## Return all equipment a Sprite can equip at a given level.
static func get_equipment_for_level(level: int) -> Array[Dictionary]:
	var result: Array[Dictionary] = []
	for item: Dictionary in get_all_equipment():
		if item.get("level_requirement", 99) <= level:
			result.append(item)
	return result


## Return all valid slot type names.
static func get_slot_types() -> Array[String]:
	return ["weapon", "helmet", "chest", "legs", "boots", "gloves", "ring", "amulet", "crystal"]


## Return all valid rarity tiers in ascending order.
static func get_rarity_tiers() -> Array[String]:
	return ["common", "uncommon", "rare", "epic", "legendary"]
